<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs') %>

    <p><%= JSON.stringify(result) %></p>
    <div class="detail-bg">
      <div class="chat-screen">
        <div class="chat-box"><span>안녕하세요</span></div>
        <div class="chat-box"><span>안녕하세요</span></div>
        <div class="chat-box mine"><span>안녕하세요</span></div>
      </div>
    </div>
    <div class="chat-form">
      <input class="chat-input" />
      <button class="chat-button" data-id="<%= result._id %>">전송</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/socket.io@4.7.2/client-dist/socket.io.min.js"></script>
    <script>
      const socket = io();
      //socket.emit("age", "20");

      document.querySelector(".chat-button").addEventListener("click", (e) => {
        const chatVal = document.querySelector(".chat-input").value;

        socket.emit("ask-join", "<%= result._id %>");

        socket.emit("message", { msg: chatVal, room: "<%= result._id %>" });
      });

      let idNum = 0;
      socket.on("broadcast", (data) => {
        console.log("broadcast data:", data);

        const originalNode = document.querySelector(".chat-box.mine");

        const newNodeHTML = `<div class="chat-box mine"><span>${data}</span></div>`;

        const tempDiv = document.createElement("div");
        tempDiv.innerHTML = newNodeHTML;
        const newNode = tempDiv.firstElementChild;

        idNum++;
        newNode.id = "copyNode" + idNum;

        const parentNode = originalNode.parentNode;
        parentNode.appendChild(newNode);
      });
    </script>
  </body>
</html>
